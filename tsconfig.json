{
    "compilerOptions": {
        "target": "es5",
        "baseUrl": "./",
        "paths": {
            "*": ["types/*"]
        },
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "declaration": true,
        "declarationDir": "@types",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react"
    },
    "include": [
        "src",
        "src/*",
        "./src/**/*",
        "./lib.d.ts"
    ]
}